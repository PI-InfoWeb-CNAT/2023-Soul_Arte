@model WebApplication1.Models.Cliente

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Soul Arte - Comércio de Artesanato</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous">
    </script>
    <link href="~/Content/principal.css" rel="stylesheet" />
    <link href="~/Content/categorias.css" rel="stylesheet" />
    <link href="~/Content/log_in.css" rel="stylesheet" />
    <script src="~/Content/categorias-menu.js"></script>
</head>
<body>
    <header>
        <div class="cabecalho">
            <figure>
                <a href="/Home/Index"><img src="~/Content/imagens/logo_.png" alt="logotipo do Soul Arte" /></a>
            </figure>
            <form action="resultado.html" method="get">
                <div class="busca">
                    <input type="text" name="busca" id="idbusca" />
                    <input type="submit" value=" " id="lupa" />
                </div>
            </form>
            <nav class="menu-user">
                <ul>
                    <li>

                        <a href="/Home/Login"><img src="~/Content/imagens/header/icon-login.png" alt="entrar ou registrar-se"></a>
                    </li>
                    <li>
                        <a href="favoritos.html"><img src="~/Content/imagens/header/icon-heart.png" alt="ver favoritos"></a>
                    </li>
                    <li>
                        <a href="carrinho.html"><img src="~/Content/imagens/header/icon-carrinho-de-compras.png" alt="ver carrinho de compras"></a>
                    </li>
                </ul>
            </nav>
        </div>

    </header>

    <div id="migalha">
        <div id="migalha-margem" class="margem">
            <nav>
                <ol>
                    <li><a href="/Home/Index">HOME</a></li>
                    <li>></li>
                    <li><a href="/Home/Login">LOGIN</a></li>
                </ol>
            </nav>
        </div>
    </div>
    <main>
        <div id="log-margem">
            <div class="margem">
                <section class="log">
                    <div class="logbox">
                        <h1 id="entrar">ENTRAR</h1>
                        <form>
                            <!-- <div class="info">
                                <label for="email">E-MAIL:</label>
                                <br>
                                <input type="text" id="email" required />
                            </div>
                            <div class="info">
                                <label for="password">SENHA:</label>
                                <br>
                                <input type="password" id="password" required />
                            </div>
                            <p>* Não tenho uma conta - <br> <a href="sign_in.html">CRIAR CONTA</a></p>
                            <p>* <a href="senha.html">Esqueci minha senha</a></p>

                            <div id="input-enviar">
                                <input id="enviar" type="submit" value="ENTRAR" />
                            </div> -->
                            @using (Html.BeginForm("LoginCliente", "Home", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="info">
                                    @Html.LabelFor(m => m.Email)
                                    @Html.TextBoxFor(m => m.Email, "", new { @placeholder = "Email" })

                                </div>
                                <div class="info">
                                    @Html.LabelFor(m => m.Senha)
                                    @Html.TextBoxFor(m => m.Senha, new {@placeholder = "Senha" })
                                </div>
                                <div class="info">
                                    <input id="enviar" type="submit" name="submit" class="btn btn-primary" value="Login" />
                                </div>
                            }
                        </form>
                    </div>
                </section>
            </div>

        </div>

    </main>
    <footer>
        <div class="redes">
            <p>REDES SOCIAIS</p>
            <figure>
                <a href="#"><img src="~/Content/imagens/footer/mdi_instagram.svg" /></a>
                <a href="#"><img src="~/Content/imagens/footer/mingcute_facebook-line.svg" /></a>
                <a href="#"><img src="~/Content/imagens/footer/ri_twitter-line.svg" /></a>
            </figure>
        </div>
        <div class="ajuda">
            <p>Ajuda</p>
            <a href="sac.html">Serviço de atendimento ao cliente</a>
            </br>
            <a href="sac.html">Perguntas frequentes</a>
        </div>
        <div>
            <p>NOS CONTACTE</p>
            <address>soul.arte@gmail.com</address>
            <address>+55 (84) 9 9999-9999</address>
        </div>
        <div class="copyright">
            <p>© Desenvolvido por Iara Monyke, Iraikare Rodrigues, Luiza Varella e Renan Balbino.</p>
        </div>
    </footer>
</body>
</html>
