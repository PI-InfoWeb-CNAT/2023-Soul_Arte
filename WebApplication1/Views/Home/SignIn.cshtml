<body>
    <header>
        <div class="cabecalho">
            <figure>
                <a href="/Home/Index"><img src="~/Content/imagens/logo_.png" alt="logotipo do Soul Arte" /></a>
            </figure>
            <form action="resultado.html" method="get">
                <div class="busca">
                    <input type="text" name="busca" id="idbusca" />
                    <input type="submit" value=" " id="lupa" />
                </div>
            </form>
            <nav class="menu-user">
                <ul>
                    <li>

                        <a href="/Home/Login"><img src="~/Content/imagens/header/icon-login.png" alt="entrar ou registrar-se"></a>
                    </li>
                    <li>
                        <a href="favoritos.html"><img src="~/Content/imagens/header/icon-heart.png" alt="ver favoritos"></a>
                    </li>
                    <li>
                        <a href="carrinho.html"><img src="~/Content/imagens/header/icon-carrinho-de-compras.png" alt="ver carrinho de compras"></a>
                    </li>
                </ul>
            </nav>
        </div>

    </header>


    
    <div id="migalha">
        <div id="migalha-margem" class="margem">
            <nav>
                <ol>
                    <li><a href="/Home/Index">HOME</a></li>
                    <li>></li>
                    <li><a href="/Home/Login">LOGIN</a></li>
                    <li>></li>
                    <li><a href="/Home/SignIn">CADASTRO</a></li>
                </ol>
            </nav>
        </div>
    </div>
    <main>
        <section>
            <h1>ESCOLHA O PERFIL DESEJADO:</h1>
            <div id="sign">
                <div class="cliente">
                    <figure>
                        <img src="~/Content/imagens/signin/cliente.png" />
                    </figure>
                    <div>
                        <h1>CLIENTE</h1>
                        <p>Quero poder fazer compras e seguir novas lojas!</p>
                        <form action="sign_incliente.html">
                            <input id="enviar" type="submit" value="COMEÇAR" />
                        </form>
                    </div>
                </div>
                <div class="vendedor">
                    <figure>
                        <img src="~/Content/imagens/signin/vendedor.png" />
                    </figure>
                    <div>
                        <h1>VENDEDOR</h1>
                        <p>Quero criar minha lojinha virtual e vender muito!</p>
                        <form action="sign_invendedor.html">
                            <input id="enviar" type="submit" value="COMEÇAR" />
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <footer>
        <div class="redes">
            <p>REDES SOCIAIS</p>
            <figure>
                <a href="#"><img src="~/Content/imagens/footer/mdi_instagram.svg" /></a>
                <a href="#"><img src="~/Content/imagens/footer/mingcute_facebook-line.svg" /></a>
                <a href="#"><img src="~/Content/imagens/footer/ri_twitter-line.svg" /></a>
            </figure>
        </div>
        <div class="ajuda">
            <p>Ajuda</p>
            <a href="sac.html">Serviço de atendimento ao cliente</a>
